{
    "scripts": {
        "watch": "run-p *:watch",
        "build": "run-s -c *:build",
        "sass:watch": "sass --style=expanded src/scss/main-dev.scss assets/css/main.css & sass --watch --style=expanded src/scss/main-dev.scss assets/css/main.css",
        "sass:build": "sass --no-source-map --style=compressed src/scss/main.scss assets/css/main.css",
        "webpack:watch": "npx webpack --watch --mode=development",
        "webpack:build": "npx webpack --mode=production --node-env=production",
        "postcss:build": "npx postcss assets/css/*.css --use autoprefixer -d assets/css/"
    },
    "devDependencies": {
        "@googlemaps/js-api-loader": "^1.14.3",
        "autoprefixer": "^10.4.8",
        "css-loader": "^6.7.1",
        "focus-visible": "^5.2.0",
        "gsap": "^3.11.0",
        "just-validate": "^3.8.1",
        "micromodal": "^0.4.10",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.4.16",
        "postcss-cli": "^10.0.0",
        "sass": "^1.54.5",
        "style-loader": "^3.3.1",
        "swiper": "^8.3.2",
        "webpack": "5.74.0",
        "webpack-cli": "4.10.0"
    }
}